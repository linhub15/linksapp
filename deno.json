{
  "workspace": [
    "api",
    "ui"
  ],
  "tasks": {
    "dev": {
      "command": "echo dev",
      "dependencies": ["api", "ui"]
    },
    "api": "deno task --cwd api dev",
    "db": "deno task --cwd api dev:db",
    "drizzle": "deno task --cwd api drizzle",
    "test": "deno test --allow-net",
    "ui": "deno task --cwd ui dev",
    "ui:build": "deno task --cwd ui build",
    "ui:serve": "deno task --cwd ui serve"
  },
  "exclude": ["node_modules", "ui/.vite"],
  "imports": {
    "@cmd-johnson/oauth2-client": "jsr:@cmd-johnson/oauth2-client@^2.0.0",
    "@headlessui/react": "npm:@headlessui/react@^2.2.0",
    "@heroicons/react": "npm:@heroicons/react@^2.2.0",
    "@hono/trpc-server": "npm:@hono/trpc-server@^0.3.2",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.4.1",
    "@libsql/client": "npm:@libsql/client@^0.14.0",
    "@std/assert": "jsr:@std/assert@^1.0.6",
    "@std/crypto": "jsr:@std/crypto@^1.0.3",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@std/fs": "jsr:@std/fs@^1.0.6",
    "@std/http": "jsr:@std/http@^1.0.11",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.0.0-beta.2",
    "@tanstack/react-form": "npm:@tanstack/react-form@^0.37.1",
    "@tanstack/react-query": "npm:@tanstack/react-query@^5.61.5",
    "@tanstack/react-query-devtools": "npm:@tanstack/react-query-devtools@^5.61.5",
    "@tanstack/react-router": "npm:@tanstack/react-router@^1.84.0",
    "@tanstack/router-plugin": "npm:@tanstack/router-plugin@^1.83.1",
    "@trpc/client": "npm:@trpc/client@^10.45.2",
    "@trpc/server": "npm:@trpc/server@^10.45.2",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
    "clsx": "npm:clsx@^2.1.1",
    "cva": "npm:cva@1.0.0-beta.0",
    "drizzle-kit": "npm:drizzle-kit@^0.28.1",
    "drizzle-orm": "npm:drizzle-orm@^0.36.4",
    "drizzle-zod": "npm:drizzle-zod@^0.5.1",
    "hono": "npm:hono@^4.6.12",
    "jose": "npm:jose@^5.9.6",
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "superjson": "npm:superjson@^2.2.1",
    "tailwindcss": "npm:tailwindcss@^4.0.0-beta.2",
    "vite": "npm:vite@^6.0.1",
    "zod": "npm:zod@^3.23.8"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
